<%- include('includes/head') %>





  <% comments.forEach(comment => { %>
   
<div class="container">
    <div class="card mt-5">
      <div class="card-body">
        <h5 class="card-title">Comment</h5>
        <p class="card-text"><%= comment.content %></p>
        <p class="card-text"><strong>Author:</strong><%= comment.author %></p>
        <p class="card-text"><strong>Date:</strong><%= comment.createdAt %></p>
        <p class="card-text"><strong>Article Name:</strong><%= comment.article.title %></p>
  
        <!-- Delete form -->
        <form action="/articles/comment/<%= comment._id %>/delete" method="POST">
          <input type="hidden" name="commentId" value="commentId123">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <% }) %>